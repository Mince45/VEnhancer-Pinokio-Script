{
  "run": [
    {
      "method": "shell.start",
      "params": {
        "path": "."
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "git clone https://github.com/Vchitect/VEnhancer.git VEnhancer"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "python -m venv VEnhancer/env"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "{{ os.platform()==='win32' ? 'VEnhancer\\\\env\\\\Scripts\\\\activate' : 'source VEnhancer/env/bin/activate' }}"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r VEnhancer/requirements.txt"
      }
    },
    {
      "method": "input",
      "params": {
        "title": "Установка завершена",
        "description": "VEnhancer установлен. Нажмите «Start» для запуска."
      }
    }
  ]
}
